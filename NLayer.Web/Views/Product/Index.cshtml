
@{
    ViewData["Title"] = "Index";
}
@model List<ProductWithCategoryDto>
<h1>Index</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>    
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category</th>
        <th>Created Date</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Stock</td>
                    <td>@product.Category.Name</td>
                    <td>@product.CreatedDate</td>

                </tr>
            }
        </tr>
    </tbody>
</table>
